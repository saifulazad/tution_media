        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#0000ff"
        android:paddingBottom="20dip"></TextView>
     
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:id="@+id/the_button" />
</LinearLayout>