<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true">		
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <EditText
                android:id="@+id/min"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="41dp"
                android:ems="10"
                android:hint="Min Salary"
                android:inputType="number" />

            <EditText
                android:id="@+id/max"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/min"
                android:layout_alignBottom="@+id/min"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:hint="Max Salary"
                android:inputType="number">
			<requestFocus />            
		</EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/max"
                android:layout_centerHorizontal="true"
                android:text="to" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/max"
                android:layout_marginTop="21dp"
                android:text="Subject" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="21dp" />

            <EditText
                android:id="@+id/sub"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spinner1"
                android:ems="10"
                android:inputType="textMultiLine" >

                
            </EditText>

            <EditText
                android:id="@+id/inst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sub"
                android:layout_marginTop="33dp"
                android:hint="Educational Institute"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inst"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="Next" />

        </RelativeLayout>
		
</ScrollView>

    
    